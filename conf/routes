# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index()







# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)






# Messaging pages and actions

GET         /messager                    controllers.MessagerController.getMessagerPage()

POST        /messager/pushmessage        controllers.MessagerController.postMessage()

GET         /messager/handle             controllers.MessagerController.registerSocket()

POST        /messager/deleteall          controllers.MessagerController.deleteAllMessages()